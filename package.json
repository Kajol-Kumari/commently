{
  "name": "commently-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Easily comment on github issues and PRs",
  "author": "Intuit",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf packages/**/dist && lerna clean --yes",
    "test": "jest",
    "lint": "tslint -p . --format stylish",
    "build": "lerna run --stream build",
    "build:watch": "lerna run --parallel build -- -- --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "husky": "^1.3.1",
    "jest": "23.6.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-xo": "^0.13.0",
    "typescript": "^3.2.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*.d.ts",
      "**/*.{ts,tsx}"
    ],
    "globals": {
      "test-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@types/node": "^10.12.18"
  }
}
